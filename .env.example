# 应用基本配置
APP_NAME=thesis-formatter
APP_VERSION=1.0.0

# 前端配置
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_NAME=论文格式化工具
NEXT_PUBLIC_MAX_FILE_SIZE=50485760

# 后端配置
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here
PORT=5000

# 文件处理配置
UPLOAD_FOLDER=/tmp/uploads
PROCESSED_FOLDER=/tmp/processed
MAX_FILE_SIZE=50485760
ALLOWED_EXTENSIONS=docx,doc

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/thesis_formatter
POSTGRES_DB=thesis_formatter
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# Railway 配置
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_NAME=thesis-formatter

# 自定义域名 (可选)
CUSTOM_DOMAIN=

# 监控配置
SENTRY_DSN=
LOG_LEVEL=INFO

# 安全配置
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
JWT_SECRET_KEY=your-jwt-secret-key

# 文件存储配置
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=

# 邮件配置 (可选)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourapp.com

# 第三方服务配置
GOOGLE_ANALYTICS_ID=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# 缓存配置
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1

# 异步任务配置
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3